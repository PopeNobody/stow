#!/usr/bin/perl
#! -*- perl -*- -p
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;

use strict;
use warnings;
use autodie qw(:all);
BEGIN {
  use FindBin qw($Bin);
  use lib "$Bin/../lib/perl";
  $|++;
  $\="\n";
};
use Data::Dumper;

my @lines = qx(dmesg -c);
my ($serdate) = qx(serdate);

chomp(@lines);
open(STDOUT,">/var/log/dmesg-$serdate");
print for @lines;
close(STDOUT);
