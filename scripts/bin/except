#!/usr/bin/perl
# vim: sw=2 ts=2

use warnings;
use strict;
use Data::Dumper;
use autodie qw(:all);
BEGIN {
  open(STDOUT,"|less -S");
  open(STDERR,">&STDOUT");
};
END {
  close(STDERR);
  close(STDOUT);
};

our(@filter);
sub help()
{
  print "
usage:  except [-d] \
	[ args to exclude ] \
  [ -- command and mandatory args ]
	[ -- filtered args ] \
	[ -- unfiltered args ] \
	[ -- filtered args ]

execute command, filtering args.
";
};
sub version()
{
  print "$0 version 0.1.0";
};
our(%exc,@grp,@cmd,$data);

$data={
      exc=>\%exc,
      cmd=>\@cmd,
      argv=>\@ARGV,
    };
## first we grab the exclude args.
while(@ARGV && ($_=shift)ne'--') {
  $exc{$_}=1;
};
while(@ARGV) {
  push(@cmd,[]);
  while(@ARGV && ($_=shift)ne'--')
  {
    push(@{$cmd[@cmd-1]},$_) unless (@cmd % 2) && $exc{$_};
  };
};
@cmd = map { @$_ } @cmd;
system("echo", @cmd);
