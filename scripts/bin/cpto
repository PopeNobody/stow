#!/usr/bin/perl
use strict;
use warnings;
use autodie qw(:all);
BEGIN {
  use FindBin qw($Bin $Script);
  use lib "$Bin/../lib/perl";
};
use File::Spec;
print STDERR "Script: $Script\n";
my (%cmd,$cmd);
$cmd{cpto}=[ "cp","-vi" ];
$cmd{mvto}=[ "mv","-vi" ];
$cmd{lnto}=[ "ln","-s", "-vi" ];
$cmd=$cmd{$Script};
my $copying = ($Script eq "cpto");
die "script should be named cpto, mvto, or lnto; not $Script" unless defined $cmd;
use Getopt::WonderBra;
use Data::Dumper;
use File::Basename;
use File::Path qw(make_path);
use Cwd;

if ( @ARGV < 1 ) {
	print STDERR "usage: $0 <dest> <files...>\n";
	exit 1;
}

my $dir=shift;
make_path $dir unless -d $dir;

for(@ARGV){
  $_=File::Spec->rel2abs($_);
};
chdir($dir);
for(@ARGV){
  my $dst=basename($_);
  my $abs=$_;
  my $src=File::Spec->abs2rel($_);
  if(-e "$dst") {
    warn "'$dst' exists, skipping\n";
  } elsif($copying && -d "$src") {
    warn "'$src' is a dir, skipping";
  } else {
    system(@$cmd,$src,$dst);
  };
};
