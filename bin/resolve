#!/bin/bash
warn() {
  echo >&2 "$*"
  true
}
export -f warn
resolve() {
  warn "resolve: $@"
  if (($#==1)); then
    temp="$1"
    test -z "$temp" && return 0;
    if ! test -e "$1" ; then
      echo >&2 "resolve: $1 does not exist"
      return 1;
    fi
    test "$temp" = "/" && echo "$temp" && return 0
    warn "temp=$temp"
    while test "${temp:${#temp}-1:1}" == "/"; do
      warn "trim: $temp"
      temp="${temp:0:-1}"
    done
    warn "temp=$temp"

    shift
    while test -h "$temp"; do
      dest=$(readlink "$temp")
      warn "dest=$dest";
      if test "${dest:0:1}" != "/"; then
        warn "not absolute";
        dir=$(dirname "$temp")
        dest="$dir/$dest"
      fi
      temp="$dest"
    done
    warn "temp=$temp"
    dir=$(dirname "$temp")
    warn "dir=$dir"
    dir=$(cd "$dir" && pwd -P)
    warn "dir=$dir"
    temp="$dir/$(basename "$temp")"
    echo "$temp";
    warn ""
  else
    warn "resolving $( (($#)) && printf '%q\n' "$@")"
    for i; do echo "'$i' '$(resolve "$i")'"; done
  fi
}
export -f resolve
return 0 2>/dev/null
#bash -xc 'resolve "$@"' -- "$@"
resolve "$@"
