#!/usr/bin/perl
# vim: ts=2 sw=2 ft=perl
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;

use strict;
use warnings;
BEGIN {
  use FindBin qw($Bin $Script);
  use lib "$Bin/../lib/perl";
  $|++; $\="\n"; $,=" "; $"=" "; $/="\n";
};
use autodie qw(:all);
use Data::Dump;
use Data::Dump qw(dd pp ddx ppx quote);
use File::stat;
use Getopt::WonderBra;

$\="\n";
sub version {
  print "$Script: version 0.2.0";
}
sub help {
  print "$Script: help not implemeented";
}
our($base) = 0;
{
  package Getopt::WonderBra;
  our($n)=0;
  sub handle_all(@){
    @_ = getopt("b:",@_);
    while(($_=shift)ne"--"){
      if(/^-b/){
        $base=shift;
      }
    };
    return @_;
  }
  @ARGV = handle_all(splice @ARGV);
}
my $t=time;
for(@ARGV)
{
  my $st=stat($_);
  if(!defined($st)){
    warn("stat:$_:$!");
    next;
  };
  printf "%d secs %d days: %s\n", ($t-$st->mtime), ($t-$st->mtime)/86400, $_;
};
