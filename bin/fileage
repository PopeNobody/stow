#!/usr/bin/perl

use strict;
use warnings;
use Data::Dumper;
use Data::Dump;
use File::stat;
use Getopt::WonderBra;
$\="\n";
our($base) = 0;
{
  package Getopt::WonderBra;
  our($n)=0;
  sub handle_all(@){
    @_ = getopt("b:",@_);
    while(($_=shift)ne"--"){
      if(/^-b/){
        $base=shift;
      }
    };
    return @_;
  }
  @ARGV = handle_all(splice @ARGV);
}
my $t=time;
for(@ARGV)
{
  my $st=stat($_);
  if(!defined($st)){
    warn("stat:$_:$!");
    next;
  };
  printf "%d secs %d days: %s\n", ($t-$st->mtime), ($t-$st->mtime)/86400, $_;
};
