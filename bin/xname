#!/usr/bin/perl
# vim: ts=2 sw=2 ft=perl
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;

use strict;
use warnings;
BEGIN {
  use FindBin qw($Bin);
  use lib "$Bin/../lib/perl";
  $|++; $\="\n"; $,=" "; $"=" "; $\="\n";
};
use autodie qw(:all);
use Data::Dump;
use Data::Dump qw(dd pp ddx ppx);

use Getopt::WonderBra;
sub help {
  print "usage: $0 [ -a ]";
  print "   -a: include -r and compile date";
  print "";
}
my $VERSION = join("-",qw(1 0 0));
sub version {
  print "$0: version $VERSION";
};
sub proc_opt;
sub main;
main();
exit(0);
sub main() {
  help();
  print "main()";
}
sub proc_opt {
  @_ = getopt("a",@_);
  my $all=0;
  while(($_=shift)ne'--'){
    print;
    if( /^-a$/ || /^--all/ ) {
      $all=1;
    } else {
      help("Unexpected: $_");
    };
  }
  ddx( [ \$_, \@_, \$all ] );
};
