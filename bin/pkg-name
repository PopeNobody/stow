#!/usr/bin/perl

use common::sense;
$|++;
use FindBin qw($Bin);
use lib "$Bin/../lib/perl";
use autodie qw(:all);
use Nobody::Util;
open(STDIN,"</dev/null");
package Pkg::debian;
sub debian_source() {
  open(STDIN,"-|", qw(apt-cache pkgnames));
};
sub alpine_source() {
  chomp;
  $_;
};
sub debian_line($) {
  chomp;
  $_;
};
sub get_os_type() {
  local (@_);
  @_ = map { split } qx(os);
  return shift;
};
sub match($);
sub line($);
sub handle_args(\@);

my $os_type=get_os_type();
if ( $os_type eq "debian" ) {
  *line=\&debian_line;
  debian_source();
} elsif ( $os_type eq "linuxmint" ) {
  *line=\&debian_line;
  debian_source();
} elsif ( $os_type eq "ubuntu" ) {
  *line=\&debian_line;
  debian_source();
} else {
    die "os_type neither debian nor void\n";
};
sub main()
{
  my %seen;
  while( <STDIN> )
  {
    chomp;
    next unless match($_);
    $seen{line($_)}++;
  };
  close(STDIN);
  print join("\n",sort keys %seen);
};
@ARGV=handle_args(@ARGV);
main();
sub handle_args(\@)
{
  local(*_)=shift;
  if(@_) {
    my @re = map { qr/$_/ } @ARGV;
    *match=sub ($){
      my $a=$_;
      for(@re) {
        return 1 if $a=~$_;
      }
      return 0;
    };
  } else {
    *match=sub ($){
      1;
    };
  };
};
